<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/home_back"
        android:focusedByDefault="false"
        android:forceHasOverlappingRendering="false"
        android:hapticFeedbackEnabled="true">


        <ProgressBar
            android:id="@+id/ProgressBarmetal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="32dp"
            android:indeterminate="false"
            android:max="100"
            android:maxWidth="200dip"
            android:maxHeight="200dip"
            android:minWidth="20dip"
            android:progress="50"
            android:progressBackgroundTint="@color/purple_200"
            android:progressDrawable="@drawable/circle_progress"
            android:progressTint="#95631A"
            android:secondaryProgress="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/ProgressBarplastic"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginTop="51dp"
            android:foregroundTint="#D3A2A2"
            android:indeterminate="false"
            android:max="100"
            android:maxWidth="200dip"
            android:maxHeight="200dip"
            android:minWidth="20dip"
            android:progress="50"
            android:progressDrawable="@drawable/circle_progress"
            android:progressTint="#085678"
            android:secondaryProgress="0"
            android:thicknessRatio="40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/ProgressBarpaper"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="68dp"
            android:foregroundTint="#D3A2A2"
            android:indeterminate="false"
            android:max="100"
            android:maxWidth="200dip"
            android:maxHeight="200dip"
            android:minWidth="20dip"
            android:progress="50"
            android:progressDrawable="@drawable/circle_progress"
            android:progressTint="#1B9F20"
            android:secondaryProgress="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/ProgressBarother"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:layout_marginTop="84dp"
            android:foregroundTint="#D3A2A2"
            android:indeterminate="false"
            android:max="100"
            android:maxWidth="200dip"
            android:maxHeight="200dip"
            android:minWidth="20dip"
            android:progress="50"
            android:progressDrawable="@drawable/circle_progress"
            android:progressTint="#830698"
            android:secondaryProgress="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homespace"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="102dp"
            android:background="@drawable/home_space"
            android:gravity="center"
            android:text="Metal\nFree: 10%"
            android:textColor="#630303"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvmetal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/home_metal"
            android:gravity="center"
            android:text="\nMetal\nQuantity: 60"
            android:textColor="#674410"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.136"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvpaper"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="528dp"
            android:background="@drawable/home_paper"
            android:gravity="center"

            android:text="\nPaper\nQuantity: 50"
            android:textColor="#27712A"
            android:textSize="24sp"


            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.136"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvplastic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/home_plastic"
            android:gravity="center"
            android:text="\nPlastic\nQuantity: 36"
            android:textColor="#16475E"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvother"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/home_other"
            android:gravity="center"
            android:text="\nCardBoard\nQuantity: 23"
            android:textColor="#631770"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="374dp"
            android:src="@drawable/icons_metal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.244"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/sptrash"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#00FFFFFF"


            android:src="@drawable/icon_trash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spuser"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="367dp"
            android:src="@drawable/icons_plastic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.753"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="548dp"
            android:src="@drawable/icons_paper"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.245"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp"
            android:src="@drawable/icons_other"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.757"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/menu_bar" />

        <TextView
            android:id="@+id/bar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/bar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/home_menu_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:contentDescription="Trang chủ"
            android:drawablePadding="8dp"
            android:src="@drawable/icon_home_1" />

        <ImageButton
            android:id="@+id/notification_menu_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:contentDescription="Thông báo"
            android:drawablePadding="8dp"
            android:src="@drawable/icon_notification_0" />

        <ImageButton
            android:id="@+id/history_menu_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:contentDescription="Lịch sử"
            android:drawablePadding="8dp"
            android:src="@drawable/icon_history_0" />

        <ImageButton
            android:id="@+id/remote_menu_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:contentDescription="Điều khiển"
            android:drawablePadding="8dp"
            android:src="@drawable/icon_remote_0" />

        <ImageButton
            android:id="@+id/statistical_menu_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:contentDescription="Cài đặt"
            android:drawablePadding="8dp"
            android:src="@drawable/icon_statistical_0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Trang chủ"
            android:textColor="#2491E8" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thông báo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Lịch sử" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Điều khiển" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thống kê" />

    </LinearLayout>


</LinearLayout>