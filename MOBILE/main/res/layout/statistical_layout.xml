            android:contentDescription="Trang chủ"
            android:drawablePadding="8dp"
            android:src="@drawable/icon_home_0" />

        <ImageButton
            android:id="@+id/notification_menu_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:contentDescription="Thông báo"
            android:drawablePadding="8dp"
            android:src="@drawable/icon_notification_0" />

        <ImageButton
            android:id="@+id/history_menu_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:contentDescription="Lịch sử"
            android:drawablePadding="8dp"
            android:src="@drawable/icon_history_0" />

        <ImageButton
            android:id="@+id/remote_menu_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:contentDescription="Điều khiển"
            android:drawablePadding="8dp"
            android:src="@drawable/icon_remote_0" />

